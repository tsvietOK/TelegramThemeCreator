<Application
    x:Class="TelegramThemeCreator.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TelegramThemeCreator"
    StartupUri="/Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/ResourceDictionaries/ButtonStyle.xaml" />
                <ResourceDictionary
                    Source="/ResourceDictionaries/CheckBoxStyle.xaml" />
                <ResourceDictionary
                    Source="/ResourceDictionaries/SliderStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>